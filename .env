# Backend Environment Variables
# Copy this to .env in your backend directory

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Database Configuration (choose one)

# For PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/movie_review_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=movie_review_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# For MongoDB
MONGODB_URI=mongodb://localhost:27017/movie_review_db

# For MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=movie_review_db
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password

# External API Keys (Optional)
TMDB_API_KEY=your_tmdb_api_key_here
OMDB_API_KEY=your_omdb_api_key_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880 # 5MB

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here
